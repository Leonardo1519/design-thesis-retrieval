{
  "name": "design-thesis-retrieval",
  "version": "1.0.0",
  "productName": "DesignThesisRetrieval",
  "description": "Design Thesis Retrieval Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist -ErrorAction SilentlyContinue }\"",
    "dist:win": "npm run clean && electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "antd": "^5.12.8",
    "@ant-design/icons": "^5.2.6"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3",
    "electron-builder": "^25.1.6"
  },
  "build": {
    "appId": "com.example.designthesisretrieval",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "package.json",
      "!json-data/**"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/new.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/nsis/data-dir.nsh"
    }
  }
}
